<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chat_icon"
                android:layout_width="62dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_top_message"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="248dp"
            android:layout_height="121dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:typeface="sans"
                tools:text="preview" />

            <TextView
                android:id="@+id/last_message_preview"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxEms="50"
                android:singleLine="false"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="preview" />

            <LinearLayout
                android:layout_width="194dp"
                android:layout_height="51dp"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/skill_1"
                    android:layout_width="61dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/scientist_icon" />

                <ImageView
                    android:id="@+id/skill_2"
                    android:layout_width="37dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/creative_icon" />

                <ImageView
                    android:id="@+id/skill_3"
                    android:layout_width="37dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/old_philosophers" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_padding"
                android:background="@drawable/rectangle_rounded"
                android:backgroundTint="@color/orange_500"
                android:clickable="true"
                android:gravity="center"
                android:minWidth="37dp"
                android:padding="8dp"
                android:textColor="@color/white"
                tools:text="00" />

            <TextView
                android:id="@+id/best_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_padding"
                android:background="@drawable/rectangle_rounded"
                android:backgroundTint="@color/green_500"
                android:padding="8dp"
                android:text="@string/best_choice"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_padding"
                android:background="@drawable/rectangle_rounded"
                android:backgroundTint="@color/grey_500"
                android:clickable="true"
                android:padding="8dp"
                android:text="@string/about"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

