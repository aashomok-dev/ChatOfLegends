<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="@dimen/margin_top_message"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:duplicateParentState="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/chat_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="37dp"
                android:background="@drawable/rectangle_rounded"
                android:backgroundTint="@color/orange_500"
                android:clickable="true"
                android:gravity="center"
                android:layout_margin="@dimen/button_padding"
                android:padding="8dp"
                android:textColor="@color/white"
                tools:text="00" />

            <TextView
                android:id="@+id/best_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_padding"
                android:background="@drawable/rectangle_rounded"
                android:backgroundTint="@color/green_500"
                android:padding="8dp"
                android:text="@string/best_choice"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/about"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_padding"
                android:background="@drawable/rectangle_rounded"
                android:backgroundTint="@color/grey_500"
                android:padding="8dp"
                android:text="@string/about"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:typeface="sans"
            tools:text="preview" />

        <TextView
            android:id="@+id/last_message_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="preview" />
    </LinearLayout>

    <TextView
        android:id="@+id/last_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_top_message"
        android:orientation="vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:typeface="sans"
        tools:text="preview" />
</LinearLayout>

